{
    "name": "convertwidth",
    "displayName": "Convert Width",
    "description": "半角文字を全角文字に変換する、Visual Studio Codeの機能拡張です。",
    "version": "0.1.0",
    "publisher": "8amjp",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "onCommand:extension.convertWidthAlphabet",
        "onCommand:extension.convertWidthNumber",
        "onCommand:extension.convertWidthSymbol"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.convertWidthAlphabet",
                "title": "Convert Width: Alphabet"
            }, {
                "command": "extension.convertWidthNumber",
                "title": "Convert Width: Number"
            }, {
                "command": "extension.convertWidthSymbol",
                "title": "Convert Width: Symbol"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == markdown",
                    "command": "extension.convertWidthAlphabet",
                    "group": "navigation"
                }, {
                    "when": "resourceLangId == plaintext",
                    "command": "extension.convertWidthAlphabet",
                    "group": "navigation"
                }, {
                    "when": "resourceLangId == markdown",
                    "command": "extension.convertWidthNumber",
                    "group": "navigation"
                }, {
                    "when": "resourceLangId == plaintext",
                    "command": "extension.convertWidthNumber",
                    "group": "navigation"
                }, {
                        "when": "resourceLangId == markdown",
                    "command": "extension.convertWidthSymbol",
                    "group": "navigation"
                }, {
                    "when": "resourceLangId == plaintext",
                    "command": "extension.convertWidthSymbol",
                    "group": "navigation"
                }
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/8amjp/vsce-convertwidth.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
